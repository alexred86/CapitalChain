{
  "expo": {
    "name": "CapitalChain",
    "slug": "capitalchain",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6200ea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.alexred.capitalchain",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Permitir que $(PRODUCT_NAME) use Face ID."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6200ea"
      },
      "package": "com.alexred.capitalchain",
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Permitir que $(PRODUCT_NAME) use Face ID."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "2c40f21e-792e-4b3d-b39c-97d56f31b5ba"
      }
    }
  }
}
